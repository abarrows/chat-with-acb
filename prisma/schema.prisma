generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_LOCAL_URL")
  directUrl         = env("DATABASE_LOCAL_URL")
  shadowDatabaseUrl = env("DATABASE_LOCAL_URL")
}

model labels {
  id              Int              @id @default(autoincrement())
  name            String
  categoryName    String
  labelCategories label_categories @relation(fields: [categoryName], references: [name])
  trainingItem    trainingItem[]   @relation("LabelToTrainingItem")

  @@unique([name, categoryName])
}

model trainingItem {
  id        Int      @id @default(autoincrement())
  itemId    String   @unique
  title     String
  url       String
  body      String?
  key       String
  excerpt   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  labels    labels[] @relation("LabelToTrainingItem")

  @@map("training_items")
}

model label_categories {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  labels labels[]
}
